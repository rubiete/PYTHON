#include<iostream>
int main(){
    /*Esto es un omentario 
    que ocupa mas de una línea del p*/
    //Esto es uncomentario de una línea
    int a;
    int b;
    int c;
    int solucion,salir;
    /*Inicialización de variables*/
    a=2;
    b=4;
    c=-1;
    solucion=a+b+c;
    std::cout<<"La solución es: "<<solucion <<std::+endl;
    std::cout<<"Para salir toca cualquier tecla";
    std::cin>>salir;
}
